{
	"$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"correctness": {
				"recommended": true
			},
			"performance": {
				"recommended": true
			},
			"security": {
				"recommended": true
			},
			"style": {
				"recommended": true,
				"noCommaOperator": "off",
				"useSingleVarDeclarator": "off"
			},
			"suspicious": {
				"recommended": false
			},
			"complexity": {
				"recommended": true
			},
			"a11y": {
				"recommended": true
			}
		}
	},
	"files": {
		"ignore": [
			"coverage",
			"coverage/**",
			"**/coverage/**",
			"dist/**",
			"node_modules/**",
			".vscode/**",
			".changeset/**",
			".husky/**",
			".github/**",
			"*.d.ts",
			"**/*.d.ts",
			"**/*.yapl"
		],
		"ignoreUnknown": true
	}
}
