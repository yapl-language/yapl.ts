{
  "name": "@yapl-language/yapl.ts",
  "access": "public",
  "version": "0.1.2",
  "description": "Modern TypeScript library boilerplate (ESM + CJS) built with Vite, Vitest, and Biome.",
  "keywords": [
    "yapl",
    "AI",
    "Agent",
    "Prompt",
    "Template Language"
  ],
  "license": "MIT",
  "author": {
    "name": "Einfach AI",
    "email": "hi@einfachai.com",
    "url": "https://einfachai.com"
  },
  "homepage": "https://yapl-language.github.io",
  "social": {
    "discord": "https://discord.gg/R5CsJHxTeZ"
  },
  "support": {
    "email": "hi@einfachai.com",
    "chat": "https://discord.gg/R5CsJHxTeZ"
  },
  "documentation": "https://yapl-language.github.io/documentation",
  "bugs": {
    "url": "https://github.com/yapl-language/yapl.ts/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "vite build",
    "dev": "vitest",
    "test": "vitest run --coverage",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "check": "biome ci src && tsc -p tsconfig.json --noEmit",
    "prepublishOnly": "pnpm run build && pnpm test",
    "prepare": "husky",
    "codecov": "codecov",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@changesets/cli": "^2.27.8",
    "@types/node": "^20.14.0",
    "@vitest/coverage-v8": "^3.2.4",
    "codecov": "~3.8.3",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.10",
    "typescript": "^5.5.0",
    "vite": "^5.3.0",
    "vite-plugin-dts": "^4.2.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "biome format --write"
    ]
  }
}
